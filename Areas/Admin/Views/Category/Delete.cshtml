@model delicio_app.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
    <h2 class="text-info">Delete Category</h2>
<br>

<form asp-action="Delete" method="POST">
    <div class="border background-white">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input readonly asp-for="Name" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackButton" model="@Model.ID" />
            </div>
        </div>
    </div>
</form>